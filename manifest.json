{
  "manifest_version": 2,
  "name": "emoji-translator",
  "version": "1.0",

  "description": "Emoji Translator for :emoji:",

  "icons": {
    "48": "assets/Butterfly.png"
  },
  
  "permissions": [
    "<all_urls>",
    "activeTab",
    "clipboardRead",
    "clipboardWrite"
  ],

  "browser_action": {
    "default_icon": "assets/Butterfly.png",
    "default_title": "Emoji Translator",
    "default_popup": "popup/popup-content.html"
  },

  "background" : {
    "scripts": ["./backround-script.js"]
  }

}
