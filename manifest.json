{
  "manifest_version": 2,
  "name": "emoji-translator",
  "version": "1.0",

  "description": "Emoji Translator for :emoji:",

  "icons": {
    "48": "assets/Butterfly.png"
  },
  
  "permissions": [
    "activeTab"
  ],

  "browser_action": {
    "default_icon": "assets/Butterfly.png",
    "default_title": "Emoji Translator",
    "default_popup": "popup/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"]
    }
  ]
}
